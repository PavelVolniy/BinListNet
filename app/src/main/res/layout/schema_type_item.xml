<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal">

  <LinearLayout
    android:id="@+id/ll_scheme"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/ll_bank">

    <TextView
      style="@style/titleText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="start"
      android:text="SCHEME/NETWORK" />

    <TextView
      android:id="@+id/tv_scheme"
      style="@style/valueTextAction"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Visa" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_type"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="@id/ll_scheme"
    app:layout_constraintTop_toBottomOf="@id/ll_scheme">

    <TextView
      style="@style/titleText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TYPE" />


    <TextView
      style="@style/valueTextAction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Debit/credit" />

  </LinearLayout>

</LinearLayout>